@model IEnumerable<string>

<a class="btn btn-block btn-outline-secondary" asp-action="Index" asp-controller="Home" 
   asp-route-category ="">
    Home
</a>
<!--This is where the button component functionality is set for each category button-->
@foreach (string category in Model)
{
  <a class="btn btn-block @(category == ViewBag.SelectedCategory ? "btn-primary" : "btn-outline-secondary")"
    asp-action="Index" asp-controller="Home"
    asp-route-category="@category"
    asp-route-page="1">
    @category
  </a>
}